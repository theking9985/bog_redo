<h1>Creatures#index</h1>
<p>Find me in app/views/creatures/index.html.erb</p>

<% @creatures.each do |creature| %>

	<h2>Name: <%= link_to creature.name, creature %></h2>
	<p>Description: <%= creature.description %></p>

	<%= link_to "Edit this creature", edit_creature_path(creature), class: "btn btn-primary" %>
	<%= link_to "Delete", creature, method: :delete, class: "btn btn-danger" %>


<% end %>
